@model Floresta.ViewModels.ConfirmPaymentViewModel
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <title>Payment - Floresta</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link rel="stylesheet" href="/css/Paymentform_Style.css" />
    <link rel="icon" href="~/images/Ws-small-icon.png" />
</head>
<body>
    <div class="container">
        <article class="card">
            <div class="card-body p-5">
                <ul class="nav bg-light nav-pills rounded nav-fill mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="pill" href="#nav-tab-card">
                            <i class="fa fa-credit-card"></i> Кредитною картою
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="pill" href="#nav-tab-bank">
                            <i class="fa fa-university"></i> Банківським переказом
                        </a>
                    </li>
                </ul>
                <div class="alert alert-primary" role="alert">
                    <p>Саджанці: @Model.Seedling</p>
                    <p>Кількість: @Model.PurchasedAmount</p>
                    <p>Локація: @Model.MarkerTitle</p>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nav-tab-card">
                        <p class="alert alert-danger">Валідація</p>
                        <div class="form-group">
                            <label for="username">Повне ім'я власника карти</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label for="cardNumber">Номер карти</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="cardNumber" placeholder="">
                                <div class="input-group-append">
                                    <span class="input-group-text text-muted">
                                        <i class="fab fa-cc-visa"></i>   <i class="fab fa-cc-amex"></i>
                                        <i class="fab fa-cc-mastercard"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label><span class="hidden-xs">Термін дії</span> </label>
                                    <div class="input-group">
                                        <input type="number" class="form-control" placeholder="MM" name="">
                                        <input type="number" class="form-control" placeholder="YY" name="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label data-toggle="tooltip" title=""
                                           data-original-title="3 digits code on back side of the card">CVV</label>
                                    <input type="number" class="form-control" required="">
                                </div>
                            </div>
                        </div>
                        <form asp-action="Index" method="post">
                            <input type="hidden" asp-for="MarkerId" />
                            <input type="hidden" asp-for="SeedlingId" />
                            <input type="hidden" asp-for="PurchasedAmount" />
                            <input type="hidden" asp-for="Price" />
                            <button id="PayButton" type="submit" class="subscribe btn btn-primary btn-block">
                                <span class="align-middle">₴@Model.Price</span>
                            </button>
                        </form>
                    </div>

                    <div class="tab-pane fade" id="nav-tab-bank">
                        <dl class="param">
                            <dt>Банк: </dt>
                            <dd> THE WORLD BANK</dd>
                        </dl>
                        <dl class="param">
                            <dt>Номер рахунку в банку: </dt>
                            <dd> 12345678912345</dd>
                        </dl>
                        <dl class="param">
                            <dt>IBAN: </dt>
                            <dd> 123456789</dd>
                        </dl>
                        <p><strong>Примітка:</strong> В цілі переказу вказати кількість лакацію, кількість та тип саджанців.</p>
                    </div>
                </div>

            </div>
        </article>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="~/js/card-validator.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/js/payment.js"></script>
</body>
</html>
