@inject Microsoft.AspNetCore.Identity.SignInManager<User> signInManager;
@model IEnumerable<Floresta.Models.Marker>
@{
    ViewBag.Title = "Seedlings List";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<a class="btn btn-sm btn-success" asp-action="Index">Add Marker</a>
<div class="table-responsive-sm">
    <table class="table">
        <tr>
            <td>Локація</td>
            <td>Кількість місць</td>
            <td>Довгота</td>
            <td>Широта</td>
            <td>Висадка завершена</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.PlantCount</td>
                <td>@item.Lat</td>
                <td>@item.Lng</td>
                <td>@item.isPlantingFinished</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Видалити
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
