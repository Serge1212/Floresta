@model IEnumerable<Floresta.Models.News>
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<a class="btn btn-sm btn-success" asp-action="Create">Додати новини</a>
<table class="table">
    <tr>
        <td>Титулка</td>
        <td>Зміст</td>
        <td>Дата публікації</td>
        <td>Зображення</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.DatePublished</td>
            <td><img src="~/images/news/@item.Image" height="200"/></td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Видалити
                    </button>
                </form>
            </td>

        </tr>
    }
</table>