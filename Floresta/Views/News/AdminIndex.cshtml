@inject Microsoft.AspNetCore.Identity.SignInManager<User> signInManager;
@model IEnumerable<Floresta.Models.News>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<a class="btn btn-sm btn-success" asp-action="Create">Add News</a>
<table class="table">
    <tr>
        <td>Title</td>
        <td>Content</td>
        <td>Published date</td>
        <td>Image</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.DatePublished</td>
            <td><img src="~/images/news/@item.Image" height="200"/></td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>

        </tr>
    }
</table>