@model Floresta.Models.Seedling
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<form asp-action="Edit" asp-controller="Seedlings">
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Назва</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Ціна</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Кількість</label>
        <input type="text" asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-default" />
    </div>
</form>