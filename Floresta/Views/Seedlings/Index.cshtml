@model IEnumerable<Floresta.Models.Seedling>
@{
    ViewBag.Title = "Seedlings List";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<a class="btn btn-sm btn-success" asp-action="Create">Додати саджанець</a>
<table class="table">
    <tr>
        <td>Назва</td>
        <td>Ціна</td>
        <td>Кількість</td>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>@item.Amount</td>
    <td>
        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Видалити
            </button>
        </form>
    </td>
</tr>
    }
</table>